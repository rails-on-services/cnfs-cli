# compose/nginx.yml.erb
<%-
def volume
  # "../../target/#{layer.name}/nginx.conf:/etc/nginx/conf.d/default.conf"
  # "#{target.write_path(:deployment)}/nginx.conf:/etc/nginx/conf.d/default.conf"
  "./nginx.conf:/etc/nginx/conf.d/default.conf"
end
-%>
---
version: '<%= version %>'
services:
  nginx:
    labels:
      <%= labels %>
    image: nginx
    ports:
      # expose host port 3000 and fwd to port 80 of the nginx container
      - "${NGINX_HOST_PORT:-3000}:80"
    volumes:
      - "<%= volume %>"
