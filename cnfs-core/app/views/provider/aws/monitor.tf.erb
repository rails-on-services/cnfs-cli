# Cluster monitoring
<%-
@module_name = 'monitor'
def defaults
  {
    source: 'rails-on-services/monitor/k8s',
    version: '>= 0.0.4',
    grafana_host: 'grafana',
    grafana_endpoint: target.domain_name
  }
end
-%>

module "<%= title %>" {
<%= render_config(defaults).join("\n") %>

  monitor_depends_on           = module.eks-resources
}
