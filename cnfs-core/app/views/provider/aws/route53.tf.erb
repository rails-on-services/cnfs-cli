# Route53
<%-
def defaults(config)
  {
    source: 'rails-on-services/route53/aws'
  }.merge(config)
end
-%>
module "route53" {
<%= render_attributes(defaults(resource.config) ).join("\n") %>

  root_domain                    = "<%= dns.root_domain %>"
  sub_domain                     = "<%= dns.sub_domain %>"
  root_domain_managed_in_route53 = <%= dns.root_domain_managed_in_route53 %>
}

output "route53" {
  value = module.route53.<%= output_type %>
}
