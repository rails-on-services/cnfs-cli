# RDS Aurora
<%-
def defaults(config)
  {
    source: 'terraform-aws-modules/rds-aurora/aws',
    version: '~> 2.9.0',
    engine: 'aurora-postgresql',
    engine_version: '10.7',
    performance_insights_enabled: true,
    db_subnet_group_name: '',
    username: 'postgres',
    password: 'password',
    storage_encrypted: true,
    apply_immediately: true,
    monitoring_interval: 10,
    db_cluster_parameter_group_name: 'default.aurora-postgresql10',
    db_parameter_group_name: 'default.aurora-postgresql10'
  }.merge(config)
end
-%>
<%- resource.clusters.each do |key, config| -%>

module "rds-<%= key %>" {
<%= render_attributes(defaults(config)).join("\n") %>

  allowed_security_groups         = [module.vpc.default_security_group_id]
  subnets                         = module.vpc.database_subnets
  tags                            = var.tags
  vpc_id                          = module.vpc.vpc_id
}

output "rds-<%= key %>" {
  value = module.rds-<%= key %>
}
<% end -%>
