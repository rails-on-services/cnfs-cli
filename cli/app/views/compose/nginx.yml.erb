<% # compose/nginx.yml.erb
def volume
  './nginx.conf:/etc/nginx/conf.d/default.conf'
end
%>---
version: '<%= version %>'
services:
  nginx:
    labels:
      <%= labels %>
    image: nginx
    ports:
      # expose host port 3000 and fwd to port 80 of the nginx container
      - "${NGINX_HOST_PORT:-3000}:80"
    volumes:
      - "<%= volume %>"
