<%- # compose/sftp.yml.erb -%>
---
version: '<%= version %>'
services:
  sftp:
    labels:<%= labels %>
    image: <%= service.image || 'railsonservices/sftp' %><% if service.depends_on.any? %>
    depends_on:<% service.depends_on.each do |dependency| %>
      - <%= dependency %><% end %><% end %><% if env_files.size.positive? %>
    env_file:
      - <%= env_files %><% end %>
    privileged: true
    ports:
      - '2222:22'
    cap_add:
      - SYS_MODULE
