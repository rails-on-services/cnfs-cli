# compose/localstack.yml.erb
---
version: '<%= version %>'
services:
  <%= service.name %>:
    labels:<%= labels %>
    image: <%= service.image[:name] || 'localstack/localstack' %><% if env_files.size.positive? %>
    env_file:
      - <%= env_files %><% end %>
    ports:
      - <%= expose_ports(4572) %>
      - <%= expose_ports(4574) %>
      - <%= expose_ports(4575) %>
      - <%= expose_ports(4576) %>
      - <%= expose_ports(8080) %>
