# postgres/skaffold.yml.erb
---
apiVersion: <%= version %>
kind: Config
deploy:
  helm:
    releases:
      - name: postgres
        chartPath: stable/postgresql
        remote: true
        overrides:
          master:
            podLabels:
              <%= labels(14) %>
          image:
            repository: mdillon/postgis
            tag: 10
          fullnameOverride: postgres
          postgresqlDataDir: /data/pgdata
          postgresqlDatabase: postgres
          postgresqlUsername: admin
          postgresqlPassword: admin
          persistence:
            enabled: true
            mountPath: /data/
            size: 10Gi
          securityContext:
            enabled: false
          resources: 
            limits:
              cpu: 1
              memory: 2Gi
            requests:
              cpu: 0.5
              memory: 1.5Gi
