# frozen_string_literal: true
# services/Gemfile<%= @extension %>

# Include the upstream core and sdk
<% if @extension.start_with?('.dev') %>
gem '<%= repository.upstream_repo_name %>-core', path: '<%= repository.upstream_repo_path %>/lib/core'
gem '<%= repository.upstream_repo_name %>_sdk', path: '<%= repository.upstream_repo_path %>/lib/sdk'

# NOTE: The empty group is to put a separator between the above gems and the ones below.
# Without this, rails template will put them in alphabetical order which is a problem
group :development do
end
<% else %>
gem '<%= repository.upstream_repo_name %>-core'
gem '<%= repository.upstream_repo_name %>_sdk'
<% end %>
