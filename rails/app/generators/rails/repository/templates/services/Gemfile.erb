source ENV['GEM_SERVER'] || 'https://rubygems.org'
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

ruby '2.7.1'

gem 'awesome_print'
gem 'bootsnap', '>= 1.4.2', require: false
gem 'data_migrate'
gem 'json-schema'
gem 'nokogiri', '1.10.10'
gem 'paranoia', '~> 2.2'
gem 'pg', '>= 0.18', '< 2.0'
gem 'pry-rails'
# Use Rack CORS for handling Cross-Origin Resource Sharing (CORS), making cross-origin AJAX possible
# gem 'rack-cors'
gem 'rails', '~> 6.0.2.1'
gem 'rufus-scheduler', '~> 3.6.0'


# TODO: The location of the gems on a path vs loaded from rubygems or other gem server
# needs to be coordinated with the Dockerfile
gem 'ros-core', path: '../../../ros/lib/core'
gem 'ros_sdk', path: '../../../ros/lib/sdk'
gem '<%= name %>-core', path: '../../lib/core'
gem '<%= name %>_sdk', path: '../../lib/sdk'

group :development do
  gem 'listen', '>= 3.0.5', '< 3.2'
  gem 'rails-erd'
  gem 'spring'
  gem 'spring-watcher-listen', '~> 2.0.0'
end

group :development, :test do
  gem 'airborne'
  gem 'brakeman', require: false
  # gem 'byebug', platforms: [:mri, :mingw, :x64_mingw]
  gem 'dotenv'
  gem 'factory_bot_rails'
  gem 'faker'
  gem 'jsonapi-resources-matchers'
  # gem 'pry-stack_explorer'
  gem 'pundit-matchers'
  gem 'rspec-rails'
  gem 'perx-rubocop'
  gem 'shoulda-matchers'
  gem 'spring-commands-rspec'
  gem 'rspec_junit_formatter'
end

group :production do
  gem 'puma'
end

