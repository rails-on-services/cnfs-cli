---
apiVersion: <%= @service.skaffold_version %>
kind: Config
deploy:
  helm:
    releases:
      - name: kafka-zookeeper
        chartPath: ros/cp-zookeeper
        skipBuildDependencies: true
        overrides:
          imageTag: 5.3.1
          servers: 1
          fullnameOverride: kafka-zookeeper
          podLabels:
            app.kubernetes.io/name: kafka-zookeeper
            app.kubernetes.io/part-of: application-services
          resources:
            limits:
              cpu: 1
              memory: 1.2Gi
            requests:
              cpu: 100m
              memory: 1Gi
          persistence:
            enabled: true
            dataDirSize: 10Gi
            dataLogDirSize: 1Gi
