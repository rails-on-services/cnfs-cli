---
apiVersion: <%= @service.skaffold_version %>
kind: Config
deploy:
  helm:
    releases:
      - name: kafka-connect
        chartPath: ros/cp-kafka-connect
        skipBuildDependencies: true
        overrides:
          replicaCount: 1
          image: railsonservices/kafka-connect
          imageTag: latest
          nameOverride: kafka-connect
          fullnameOverride: kafka-connect-<%= @service.current_feature_set %>
          overrideGroupId: kafka-connect-<%= @service.current_feature_set %>
          podLabels:
            app.kubernetes.io/name: kafka-connect
            app.kubernetes.io/part-of: application-services
          ## Kafka Connect JVM Heap Option
          heapOptions: "-Xms1024M -Xmx1024M"
          resources:
            limits:
              cpu: 1
              memory: 1.5Gi
            requests:
              cpu: 200m
              memory: 1Gi
          ## Additional env variables
          customEnv:
            CONNECT_LOG4J_LOGGERS: "com.wepay.kafka.connect.bigquery=DEBUG,org.apache.kafka.connect.runtime.rest=DEBUG"
            CONNECT_LOG4J_APPENDER_STDOUT_LAYOUT_CONVERSIONPATTERN: "[%d] %p %X{connector.context}%m (%c:%L)%n"
            CONNECT_LOG4J_ROOT_LOGLEVEL: "WARN"

          configurationOverrides:
            plugin.path: /usr/share/java,/usr/share/confluent-hub-components
            key.converter: org.apache.kafka.connect.storage.StringConverter
            value.converter: io.confluent.connect.avro.AvroConverter
            value.converter.schemas.enable: true
            request.timeout.ms: 20000
            retry.backoff.ms: 500
            consumer.request.timeout.ms: 20000
            consumer.retry.backoff.ms: 500
            producer.request.timeout.ms: 20000
            producer.retry.backoff.ms: 500
            <%- if @service.kafka.security_protocol == "SASL_SSL" -%>
            security.protocol: SASL_SSL
            consumer.security.protocol: SASL_SSL
            producer.security.protocol: SASL_SSL
            ssl.endpoint.identification.algorithm: https
            consumer.ssl.endpoint.identification.algorithm: https
            producer.ssl.endpoint.identification.algorithm: https
            sasl.mechanism: <%= @service.kafka.sasl_mechanism %>
            producer.sasl.mechanism: <%= @service.kafka.sasl_mechanism %>
            consumer.sasl.mechanism: <%= @service.kafka.sasl_mechanism %>
            <%- if @service.kafka.sasl_mechanism == "PLAIN" -%>
            sasl.jaas.config: org.apache.kafka.common.security.plain.PlainLoginModule required username="<%= @service.kafka.username %>" password="<%= @service.kafka.password %>";
            consumer.sasl.jaas.config: org.apache.kafka.common.security.plain.PlainLoginModule required username="<%= @service.kafka.username %>" password="<%= @service.kafka.password %>";
            producer.sasl.jaas.config: org.apache.kafka.common.security.plain.PlainLoginModule required username="<%= @service.kafka.username %>" password="<%= @service.kafka.password %>";
            <%- end -%>
            <%- end -%>
            <%- @service.kafka_connect.configuration_overrides&.reject{ |k, v| v.nil? }&.each do |k, v| -%>
            <%= k %>: <%= v %>
            <%- end -%>

          kafka:
            <%- if @service.kafka.security_protocol == "SASL_SSL" -%>
            bootstrapServers: "SASL_SSL://<%= @service.kafka.bootstrap_servers %>"
            <%- else -%>
            bootstrapServers: "PLAINTEXT://<%= @service.kafka.bootstrap_servers %>"
            <%- end -%>

          cp-schema-registry:
            url: "http://kafka-schema-registry:8081"
      <%- if @service.kafka_connect.ui -%>
      - name: kafka-connect-ui
        chartPath: ros/basic
        remote: true
        overrides:
          nameOverride: kafka-connect-ui
          image:
            repository: landoop/kafka-connect-ui
          containerPort: 8000
          env:
            PORT: "8000"
            CONNECT_URL: "http://kafka-connect-<%= @service.current_feature_set %>:8083;default"
            PROXY: "true"
          resources:
            limits:
              cpu: 1
              memory: 100Mi
            requests:
              cpu: 50m
              memory: 50Mi
      <%- end -%>